<link rel="stylesheet" href="/stylesheets/styleNovedades.css" />

<div class="holder">
  {{!fila 1}}
  <div class="fila">
    <p>Hola {{persona}}</p>
    <a class="boton" href="/admin/login/logout">Cerrar sesión
      <i class="fa-solid fa-right-from-bracket"></i></a>
  </div>
  {{!fin fila 1}}
  {{!fila 2}}
  <div class="row">
    <div class="col-7">
      <h3>Listado de noticias</h3>
    </div>
    <div class="col-5 text-end">
      <a class="btn btn-outline-success" href="/admin/novedades/agregar"><i
          class="fa fa-plus"
          aria-hidden="true"
        ></i>Nueva</a>
    </div>
  </div>
  {{!fin fila 2}}
  {{!fila 3}}
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr class="table-dark">
            <th scope="col">#</th>
            <th scope="col">Título</th>
            <th scope="col">Imágenes</th>
            <th class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{titulo}}</td>
              <td>{{{imagen}}}</td>
              <td class="text-end">
                <a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}}">
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                </a>
                <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}">
                  <i class="fa fa-trash" aria-hidden="true"></i>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  {{!fin fila 3}}
</div>